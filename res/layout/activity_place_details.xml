<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">
	<TextView
        android:id="@+id/tv_name_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp" />
    
    <RatingBar 
        android:id="@+id/rb_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_name_place"
        android:layout_below="@+id/tv_name_place"/>
    
    <TextView 
        android:id="@+id/tv_reviews_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/rb_place"
        android:layout_below="@+id/rb_place"
        android:textSize="20sp"/>
    
    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignLeft="@+id/tv_reviews_place"
        android:layout_below="@+id/tv_reviews_place"
        android:background="#ffcccccc" />
    

    
    <TextView 
        android:id="@+id/tv_information"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/tv_reviews_place"
        android:layout_below="@+id/view1"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:text="Information"
        android:textSize="20sp"
        android:background="@color/lightgrey"
        android:gravity="center_vertical"/>
      
    <FrameLayout 
    	android:id="@+id/container_information"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_below="@+id/tv_information" />
    
    </RelativeLayout>

	<Button 
	    android:id="@+id/btn_save_place"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:text="Save as Logistic"
	    android:textColor="@color/white"
	    android:background="@drawable/imagebutton"/>
</RelativeLayout>
