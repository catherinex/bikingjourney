<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xiangxu.bikingjourney.NewJourneyActivity$PlaceholderFragment" >

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:layout_marginLeft="15dp"
        android:layout_alignBaseline="@+id/et_name" />


    <EditText
        android:id="@+id/et_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/tv_name"
        android:layout_marginLeft="40dp" />
    
    <TextView 
        android:id="@+id/tv_startdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_name"
        android:layout_below="@+id/et_name"
        android:layout_alignBaseline="@+id/btn_startdate"
        android:text="Start Date"/>
    
    <Button 
        android:id="@+id/btn_startdate"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_name"
        android:layout_below="@+id/et_name"
        android:layout_marginTop="20dp" 
        android:background="@drawable/datebutton"/>
    
    <TextView 
        android:id="@+id/tv_enddate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_name"
        android:layout_alignBaseline="@+id/btn_enddate"
        android:text="End Date"/>
    
    <Button 
        android:id="@+id/btn_enddate"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_startdate"
        android:layout_below="@+id/btn_startdate"
        android:layout_marginTop="20dp"
        android:background="@drawable/datebutton"/>
    
<Button 
	    android:id="@+id/btn_save_newjourney"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:text="Save and Next Step" 
	    android:textColor="@color/white"
	    android:background="@drawable/imagebutton"/>

</RelativeLayout>
